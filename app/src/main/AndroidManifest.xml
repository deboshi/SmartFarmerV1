<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartfarmer.controlsystem">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Smart Farmer"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.smartfarmer.controlsystem.SplashScreen"
            android:label="Smart Farmer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartfarmer.controlsystem.DeviceList"
            android:label="Smart Farmer">

        </activity>

        <activity
            android:name=".HardwareController"
            android:label="Pump Control">

        </activity>

    </application>

</manifest>
